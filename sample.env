# Core configuration
PEON_CORE_PORT=3000
PEON_CORE_HOST=localhost
PEON_CORE_TRANSPORT_TYPE=sse
PEON_CORE_ENV=development

# Logging configuration
PEON_LOGGING_LEVEL=DEBUG
PEON_LOGGING_TIMESTAMP=iso
PEON_LOGGING_FILE_PATH=./logs/
PEON_LOGGING_FILE_MAX_SIZE=10485760
PEON_LOGGING_FILE_MAX_FILES=5

# Process manager configuration
PEON_PROCESS_MANAGER_MAX_PROCESSES=10
PEON_PROCESS_MANAGER_CHECK_INTERVAL_MS=5000

# Plugin configuration
# Here's an example for claude-code plugin:
# PEON_PLUGINS_CLAUDE_CODE_ENABLED=true
# PEON_PLUGINS_CLAUDE_CODE_DEFAULT_MODEL=claude-3-sonnet-20240229 